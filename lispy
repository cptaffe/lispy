#! /usr/bin/env pypy

import lis, sys

# print version and stuff
# print "Basilisk v 0.4"

# color option
# catch-all for errors
if len(sys.argv) == 2:
	if sys.argv[1] == '-c':
		try:
			lis.lispy(color=True).eval()
		except Exception as e:
			print >> sys.stderr, str(e) # print to stderr
	else:
		print("invalid flag")
else:
	try:
		lis.lispy().eval()
	except Exception as e:
		print >> sys.stderr, str(e) # print to stderr
